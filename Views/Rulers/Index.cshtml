@model NidhisRuler.Models.RulerShapeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Rulers" asp-action="Index" method="get">
    <p>
        <select asp-for="RulerShape" asp-items="Model.Shapes">
            <option value="">All</option>
        </select>

        Type: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Shape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Measurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Use)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rulers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Measurement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Use)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
